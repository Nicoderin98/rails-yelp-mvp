<div class="card">
  <h2>Create a new restaurant</h2>
  <%= simple_form_for (@restaurant) do |f| %>
    <%= f.input :name %>
    <br>
    <%= f.input :address %>
    <br>
    <%= f.input :phone_number %>
    <br>
    <%= f.input :category %>
    <br>
    <%= f.submit "Submit", class: "btn btn-primary" %>
  <% end %>
</div>
